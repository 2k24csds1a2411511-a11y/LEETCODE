class Solution {
public:
    vector<int> sortedSquares(vector<int>& nums) {
        int j = 0;
        int m = 0;
        for (auto &x : nums) x = abs(x), m = max(m, x);
        vector <int> c(m + 1, 0);
        for (auto &x : nums) c[x]++; 
        for (int i = 0; i <= m; i++) 
            while (c[i]--) 
                nums[j++] = i * i;
        return nums;
    }
};
